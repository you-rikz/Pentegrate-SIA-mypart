	<div class="table table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
                {{# product }}
					<div class="col-sm-6">
						<h2><b>{{product_name}}</b></h2>
					</div>
					<div class="col-sm-6">	
